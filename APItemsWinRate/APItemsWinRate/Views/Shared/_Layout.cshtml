<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Riot App Demo</title>
    <link href="~/Content/bootstrap-cosmo.min.css" rel="stylesheet" />
    <link href="~/Content/animate.css" rel="stylesheet" />
    <link href="~/Content/angular-chart.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body ng-app="itemsApp">
    
    <div ng-controller="backgroundCtrl">
        <!-- the background video tutorial! http://slicejack.com/creating-a-fullscreen-html5-video-background-with-css/ -->
        <div class="fullscreen-bg">
            <video id="bgVideo" loop autoplay ng-src="{{getUrlVideo(championUrl)}}" class="fullscreen-bg__video"></video>
        </div>
    </div> 

    @RenderBody()

    <script src="~/Scripts/jquery-2.1.4.js"></script>
    <script src="http://cdn.rawgit.com/nnnick/Chart.js/master/Chart.min.js" type="text/javascript"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.15/angular.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.15/angular-animate.js"></script>
    <script src="http://cdn.rawgit.com/jtblin/angular-chart.js/master/dist/angular-chart.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery.knob.js"></script>
    <script src="~/Scripts/jquery.easing.1.3.js"></script>
    <script src="~/Scripts/underscore.js"></script>
    <script src="~/Scripts/itemsApp.js"></script>
    <script src="~/Scripts/backgroundCtrl.js"></script>
    <script src="~/Scripts/event.js"></script>
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        $(document).ready(function () {
            var path = window.location.pathname;
            var music = false;
            if (path == '/APIChallenge') {
                $('#bgVideo').attr('muted', true);
            }
        });
    </script>
    </body>
    </html>
